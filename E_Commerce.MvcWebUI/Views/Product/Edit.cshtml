@model Product
 

         <form role="form" method="post" class="form-horizontal" asp-controller="Product" asp-action="Edit">
             <input type="hidden" asp-for="Id" />
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Ürün Adı</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-medium" asp-for="Name" placeholder="Ürün Adı">
                            </div>
                        </div>

                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn blue">Kaydet</button>
                        <a asp-action="Index" asp-controller="Product" class="btn default">İptal</a>
                    </div>
  </form>